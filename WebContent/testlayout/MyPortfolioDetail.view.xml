<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" xmlns:ui="sap.ca.ui" xmlns:f="sap.ui.layout.form"
	xmlns:l="sap.ui.layout.form" xmlns:c="sap.suite.ui.commons"
	controllerName="testApp.testlayout.MyPortfolioDetail" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Product Detail" showHeader="false" class="analytics">
		<content>

			<c:FacetOverview title="Produktpflege" heightType="Auto"
				width="700px" class="marginTopLeft howItWorks">

				<c:content>
					<ui:OverflowContainer overflowHeight="1000px" class="overflow">
						<ui:content>

							<f:SimpleForm id="SimpleFormDisplay354" minWidth="1024"
								maxContainerCols="2" editable="false" layout="ResponsiveGridLayout"
								title="Ihre Eingaben" labelSpanL="3" labelSpanM="3" emptySpanL="4"
								emptySpanM="4" columnsL="1" columnsM="1">
								<f:content>
									<Label text="Produktgruppe" />
									<Text text="Gemüse" />
									<Label text="Produkt" />
									<Text text="Gurke" />
									<Label text="Preis" />
									<Text text="3,99€" />
									<Label text="Verfügbar" />
									<CheckBox selected="true" />
								</f:content>
							</f:SimpleForm>

						</ui:content>
					</ui:OverflowContainer>

				</c:content>
			</c:FacetOverview>


			<c:FacetOverview title="Produktinformationen"
				heightType="Auto" width="700px" class="marginTopLeft howItWorks">
				<c:content>
					<ui:OverflowContainer overflowHeight="1000px"
						class="overflow">
						<ui:content>
							<HBox>
								<VBox width="400px">
									<Text text="Das ist unmöglich"></Text>
								</VBox>
								<VBox>
									<Image src="./img/products/gurke.png" />
								</VBox>
							</HBox>
							<HBox>
								<Button text="Sichern" type="Accept" />
							</HBox>
						</ui:content>
					</ui:OverflowContainer>
				</c:content>
			</c:FacetOverview>

		</content>
		<footer>
			<core:Fragment fragmentName="testApp.testlayout.fragments.DetailFooter"
				type="XML" />
		</footer>
	</Page>
</mvc:View>