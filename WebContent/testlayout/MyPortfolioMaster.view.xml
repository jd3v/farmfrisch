<!--               		  } -->
<!--               		  - -->
<!--               		  { -->
<!--               		  path: 'maxPrice', -->
<!-- 	              	  formatter: 'testApp.util.Formatter.CurrencyEuro' -->
<!-- 	              	  }" -->
<!-- 						description="{productID}" iconDensityAware="false" iconInset="false" /> -->
				</items>
				
				<headerToolbar>
					<Toolbar>
						<Label text="Products" />
						<ToolbarSpacer />
						<Button icon="sap-icon://settings" press="handleButtonPress" />
						<Button icon="sap-icon://person-placeholder" press="handleButtonPress" />
						<Button icon="sap-icon://drop-down-list" press="handleButtonPress" />
					</Toolbar>
				</headerToolbar>
				<infoToolbar>
					<Toolbar active="true" press="handleInfobarPress">
						<Label text="This is the info bar" />
					</Toolbar>
				</infoToolbar>
			</List>
		</content>
		<footer>
			<core:Fragment fragmentName="testApp.testlayout.fragments.MasterFooter"
				type="XML" />
		</footer>
	</Page>
