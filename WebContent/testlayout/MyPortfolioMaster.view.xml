	xmlns="sap.m" controllerName="testApp.testlayout.MyPortfolioMaster"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Product Master" showNavButton="true" navButtonPress="back"
		showHeader="false">
		<content>

			<List headerText="Product(s)" items="{path: 'ProductsGrouped'}"
				id="productProfileMasterList" growing="true" growingThreshold="3"
				growingScrollToLoad="false" updateFinished="afterListUpdated">
				<items>

<!-- 					<StandardListItem title="{product_name}" type="Navigation" -->
<!-- 						press="navToProdProfile" -->
<!-- 						info="{ -->
<!-- 	                  path: 'minPrice', -->
