	<Page title="Product Master" showNavButton="true" navButtonPress="back" showHeader="false">
		<content>
		
			<List
			    headerText="Product(s)"
			    items="{path: 'product'}"
			    growing="true"
			    growingThreshold="3"
			    growingScrollToLoad="false">
