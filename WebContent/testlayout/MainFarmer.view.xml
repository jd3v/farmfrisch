<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout" xmlns:m="sap.m" xmlns="sap.suite.ui.commons"
	controllerName="testApp.testlayout.MainFarmer" xmlns:html="http://www.w3.org/1999/xhtml">


	<m:Page title="Main" enableScrolling="false" showHeader="false">
		<m:content>
			<m:TileContainer id="container" tileDelete="handleTileDelete">

				<m:CustomTile class="farmFrischTile">
					<!-- press="navHowItWorks" -->
					<GenericTile size="M" frameType="OneByOne"
						backgroundImage="img/farmfrisch_logo_184x176.png" type="Navigation">
					</GenericTile>
				</m:CustomTile>

				<m:CustomTile class="farmFrischTile">
					<GenericTile size="M" frameType="OneByOne"
						backgroundImage="img/farmers/farmer99.png" info="{prodgroupID}"
						type="Navigation">
						<tileContent>
							<TileContent size="M">
								<content>
									<NewsContent size="M" subheader="Mein Profil">
									</NewsContent>
								</content>
							</TileContent>
						</tileContent>
					</GenericTile>
				</m:CustomTile>

				<m:CustomTile class="farmFrischTile">
					<GenericTile size="M" frameType="OneByOne" press="navToMyPortfolio"
						backgroundImage="img/farmer_products.png"
						type="Navigation">
						<tileContent>
							<TileContent size="M">
								<content>
									<NewsContent size="M" subheader="Mein Portfolio">
									</NewsContent>
								</content>
							</TileContent>
						</tileContent>
					</GenericTile>
				</m:CustomTile>

				<m:CustomTile class="farmFrischTile">
					<GenericTile size="M" frameType="OneByOne" press="navProductOV"
						backgroundImage="img/farmer_offer.png" info="{prodgroupID}" type="Navigation">
						<tileContent>
							<TileContent size="M">
								<content>
									<NewsContent size="M"
										subheader="Sparen Sie heute 25% auf Werbung!">
									</NewsContent>
								</content>
							</TileContent>
						</tileContent>
					</GenericTile>
				</m:CustomTile>

				<m:CustomTile class="farmFrischTile">
					<GenericTile size="M" frameType="OneByOne" press="navToPricing"
						backgroundImage="img/werbung.png" type="Navigation">
						<tileContent>
							<TileContent size="M">
								<content>
									<NewsContent size="M" subheader="Accountoptionen">
									</NewsContent>
								</content>
							</TileContent>
						</tileContent>
					</GenericTile>
				</m:CustomTile>

				<m:CustomTile class="farmFrischTile">
					<GenericTile size="M" frameType="OneByOne" press="navToAnalytics"
						backgroundImage="img/analytics.png" info="{prodgroupID}" type="Navigation">
						<tileContent>
							<TileContent size="M">
								<content>
									<NewsContent size="M" subheader="farmfrisch Analytics">
									</NewsContent>
								</content>
							</TileContent>
						</tileContent>
					</GenericTile>
				</m:CustomTile>
			</m:TileContainer>


		</m:content>
		<m:footer>
			<core:Fragment fragmentName="testApp.testlayout.fragments.FullscreenFooter"
				type="XML" />
		</m:footer>
	</m:Page>

</mvc:View>