<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns:m="sap.m" xmlns="sap.suite.ui.commons" controllerName="testApp.testlayout.FarmersOV"
	xmlns:html="http://www.w3.org/1999/xhtml">

	<m:Page title="Farmer Overview" enableScrolling="false"
		showHeader="false">
		<m:content>


			<m:TileContainer id="container" tileDelete="handleTileDelete"
				tiles="{ path: '/Farmfrisch/Farmers' }">

				<m:CustomTile class="farmFrischTile">

					<GenericTile size="M" frameType="OneByOne" press="navFarmer"
						backgroundImage="{profile_picture}" info="{id}" type="Navigation">
						<tileContent>
							<TileContent size="M">
								<content>
									<NewsContent size="M" subheader="{surname},{lastname}">
									</NewsContent>
								</content>
							</TileContent>
						</tileContent>
					</GenericTile>

				</m:CustomTile>

			</m:TileContainer>

		</m:content>
	<m:footer>
      <m:Toolbar>
     	<m:Button text="ZurÃ¼ck" icon="sap-icon://nav-back" press="backToLandingPage" />
        <m:ToolbarSpacer/> 
      	 <m:Button text="Share" icon="./img/fb_white_150x150.png" />
         <m:Button text="Tweet" icon="./img/twitter_white_150x150.png" />
        <m:Button icon="sap-icon://settings" />
      </m:Toolbar>
    </m:footer>
	</m:Page>

</core:View>